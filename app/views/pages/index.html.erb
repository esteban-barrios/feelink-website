<header class="mb-auto">
  <div>
    <h3 class="float-md-start mb-0">Cover</h3>
    <nav class="nav nav-masthead justify-content-center float-md-end">
      <%= link_to 'Home', root_path, class: "nav-link active" %>
      <%= link_to 'Services', services_path, class: "nav-link " %>
      <%= link_to 'About Us', about_path, class: "nav-link" %>
      <%= link_to 'Contact', contact_path, class: "nav-link" %>
      <% if !user_signed_in?%>
        <%= link_to "Iniciar Sesión", new_user_session_path, class: "nav-link" %>
        <%= link_to "Registrarse", new_user_registration_path, class: "nav-link" %>
      <% else %>
        <%= link_to "Cerrar Sesión", destroy_user_session_path, class: "nav-link" %>
      <% end %>
    </nav>
  </div>
</header>

<%=render 'layouts/flash_messages'%>

<main class="px-3">
  <h1>Cover your page.</h1>
  <p class="lead">Cover is a one-page template for building simple and beautiful home pages. Download, edit the text, and add your own fullscreen background photo to make it your own.</p>
  <p class="lead">
    <a href="#" class="btn btn-lg btn-secondary fw-bold border-white bg-white">Learn more</a>
  </p>
</main>
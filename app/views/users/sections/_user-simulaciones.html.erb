<div class="event-schedule-area-two bg-color pad100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title text-center">
                  <h2>Simulaciones Asignadas</h2>
                </div>
            </div>
            <!-- /.col end-->
        </div>
        <!-- row end-->
        <div class="row">
            <div class="col-lg-12">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade active show" id="home" role="tabpanel">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Tipo</th>
                                        <th scope="col">Estado</th>
                                        <th class="text-center" scope="col">Acci√≥n</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @user.simulaciones.each do |simulacion| %>
                                            <tr class="inner-box">
                                                <td>
                                                    <div class="r-no">
                                                        <span>
                                                            <%= simulacion.nombre%>
                                                        </span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="r-no">
                                                        <span>
                                                            <% if simulacion.realizada %>
                                                                Realizada
                                                            <% else %>
                                                                Pendiente
                                                            <% end %>
                                                        </span>              
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="primary-btn">
                                                        <%= link_to "Ver", experience_path(user_id: @user.id), class: 'btn bg-secondary text-white'%>
                                                    </div>
                                                </td>
                                            </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /col end-->
        </div>
        <!-- /row end-->
    </div>
</div>


<div class='container'>

  <h1>Editar Perfil </h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :nombre %><br />
      <%= f.email_field :nombre, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :apellido %><br />
      <%= f.email_field :apellido, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :telefono %><br />
      <%= f.email_field :telefono, autofocus: true, autocomplete: "phone" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(Opcional)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
    
    <br/>
    <div class="actions">
      <%= f.submit "Actualizar", class: 'btn btn-primary' %>
      <%= link_to "Volver", :back, class: 'btn btn-secondary' %>
    </div>
    <br/>
  <% end %>


</div>

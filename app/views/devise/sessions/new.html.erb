<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    
  <div class="row d-flex justify-content-center ">
        <div class="col-12">
          <div class="card rounded-3 text-black">
            <div class="row g-0">
              <div class="col-lg-6">
                <div class="card-body p-md-5 mx-md-4">

                  <div class="text-center mb-4">
                     <%= image_tag("logo_feelink_negro.png", size: "245x52.5") %>
                  </div>

                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                      <p>Ingresa con tu cuenta</p>

                      <div class="form-outline mb-4">
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "Email" %>
                      </div>

                      <div class="form-outline mb-4">
                        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Contraseña" %>
                      </div>

                      <% if devise_mapping.rememberable? %>
                        <div class="field">
                          <%= f.check_box :remember_me %>
                          <%= f.label :remember_me %>
                        </div>
                      <% end %>

                      <div class='actions'>
                        <div class="text-center pt-1 mb-5 pb-1">
                          <%= f.submit "Iniciar Sesión", class: 'btn btn-block gradient-custom mb-3' %>
                          <a class="text-muted"><%= render 'devise/shared/links' %></a>
                        </div>
                      </div>

                                      
                    <% end %>
                  
                  

                </div>
              </div>
              <div class="col-lg-6 d-flex align-items-center gradient-custom h-">
                <div class="px-3 py-4 p-md-5 mx-md-4">
                  <h4 class="mb-4">We are more than just a company</h4>
                  <p class="small mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor
                    incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation
                    ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>
</section>

<div class='container'>
  <h2>Añadir Trabajador</h2>
  <br/>
  <%= render 'layouts/noticias' %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= I18n.t("errors.messages.not_saved",
                  count: @user.errors.count,
                  resource: @user.class.model_name.human.downcase)
        %>
      </h2>
      <ul>
        <% @user.errors.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <%= form_for :user,  url: crear_usuario_empresa_path(@empresa.id) do |f| %>
    
    <div class="field">
      <%= f.label :nombre, class: "form-label"%><br />
      <%= f.text_field :nombre, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :apellido, class: "form-label" %><br />
      <%= f.text_field :apellido, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :telefono, class: "form-label" %><br />
      <%= f.text_field :telefono, autofocus: true, autocomplete: "phone" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "form-label" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "form-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <br/>

    <div class="field">
      <%= f.label :encargado, "Encargado: " %>
      <%= f.check_box :encargado, {:class => "form-check-input"}, 'true', 'false' %>
    </div>
    <br/>

    <div class="actions">
      <%= f.submit "Añadir", class: 'btn btn-primary' %>
      <%= link_to "Volver", empresa_path(id: params[:id]), class: 'btn btn-secondary' %>
    </div>
    <br/
    >
  <% end %>
</div>


<div class='container'>
    <h1><%= @empresa.nombre %></h1>
    <h4><%= "Direccion: #{@empresa.direccion}" %></h4>
    <% if !@empresa.oficina.empty? %>
        <h4><%= "Oficina: #{@empresa.oficina}" %></h4>
    <% end %>
    <h4><%= "Comuna: #{@empresa.comuna}" %></h4>

    <br/>

    <h1>Trabajadores</h1>

    <h2>Encargados</h2>
    <% if @empresa.encargados.empty?%>
        <p>No hay nada aqui todavia</p>
    <% else %>
        <% @empresa.encargados.each do |encargado| %>
            <%= "#{encargado.nombre} #{encargado.apellido} "%><br/>
        <% end %>
    <% end %>

    <h2>Empleados</h2>
    <% if @empresa.empleados.empty?%>
        <p>No hay nada aqui todavia</p>
    <% else %>
        <% @empresa.empleados.each do |empleado| %>
            <%= "#{empleado.nombre} #{empleado.apellido} "%><br/>
        <% end %>
    <% end %>

    <br/>

    <div>
        <%= link_to "AÃ±adir Trabajador", agregar_usuario_empresa_path, class: 'btn btn-primary'%>
        <%= link_to "Volver", empresas_path, class: 'btn btn-secondary' %>
    </div>
    <br/>
</div>